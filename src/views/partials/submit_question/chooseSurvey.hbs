<div id="choose_survey">
  <h2 class="font-weight-light mb-3"><span class="bg-dark rounded px-2 py-0.5 text-white">1</span> Choose Survey</h2>
  <div class="form-group" id="choose_survey">
    <label for="choose_survey" class="font-weight-bold">
      Which survey is this question for?
    </label>
    <div>
      <select class="form-control-sm" name="survey_id" id="select_survey" onchange="onSelectSurvey(this)" required>
        {{#if selectedSurvey}}
        <option value={{selectedSurvey.id}} data-sample-size={{selectedSurvey.sample_size}} data-poll-name="{{selectedSurvey.poll_name}}">{{selectedSurvey.poll_name}}</option>
        {{else}}
        <option value="">Select Survey</option>
        {{/if}}

        {{#each surveys}}
          <option value={{this.id}} data-sample-size={{this.sample_size}} data-poll-name="{{this.poll_name}}">{{this.poll_name}}</option>
        {{/each}}
      </select>
      <div class="spacer-sm"></div>
      <div>
        <a href="/submit/question/showAllSurveys/1">See All</a>
      </div>
      <input type=hidden name="poll_name" value="{{selectedSurvey.poll_name}}">
    </div>
  </div>

  <div class="spacer-sm"></div>

  <div class="form-group" id="use_same_sample_size">

    <label for="use_same_sample_size_options" class="font-weight-bold">
      Use the same sample size? (<span id="current_sample_size">{{selectedSurvey.sample_size}}</span>)
    </label>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="use_same_sample_size" value="yes" required>
      <input class="hide" type="text" name="sample_size" value="{{selectedSurvey.sample_size}}" id="survey_sample_size">
      <label class="form-check-label mb-2" for="yes">
        Yes
      </label>
    </div>

    <div class="form-check-inline align-middle">
      <input class="form-check-input align-middle" type="radio" name="use_same_sample_size" value="no">
      <label class="form-check-label align-middle" for="no">
        No
      </label>

      <div class="input-group-sm ml-3">
        <input class="form-control hide" name="sample_size" type="text" id="custom_sample_size" placeholder="Enter Sample Size">
      </div>
    </div>

  </div>

</div>
