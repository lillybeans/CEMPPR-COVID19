<div class="form-group hide" id="did_sample_size_change">
  <div class=row>
  <label for="did_sample_size_change_options">
    <h5>Did the sample size change for this question?</h5>
  </label>
</div>
  <div id="did_sample_size_change_options">
    <div class="row">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="did_ss_change" id="q2no" value="no" checked>
        <label class="form-check-label mb-2" for="no">
          No
        </label>
      </div>
    </div>

    <div class="row">
        <div class="form-check col-md-1 align-middle">
          <input class="form-check-input align-middle" type="radio" name="did_ss_change" id="q2yes" value="yes">
          <label class="form-check-label align-middle" for="yes">
            Yes
          </label>
        </div>

      <div class="col-md-2 input-group-sm">
        <input class="form-control hide" type="text" id="sample_size_textbox"  placeholder="Enter Sample Size" required>
      </div>
    </div>
  </div>
</div>
