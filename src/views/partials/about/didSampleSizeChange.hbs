<div id="did_sample_size_change_and_below" class="hide">
  <div class="form-group" id="did_sample_size_change">

  <label for="did_sample_size_change_options" class="font-weight-bold">
    Did the sample size change for this question?
  </label>
  <div id="did_sample_size_change_options">

    <div class="form-check">
      <input class="form-check-input" type="radio" name="did_ss_change" id="q2no" value="no">
      <label class="form-check-label mb-2" for="no">
        No
      </label>
    </div>



    <div class="form-check-inline align-middle">
      <input class="form-check-input align-middle" type="radio" name="did_ss_change" id="q2yes" value="yes">
      <label class="form-check-label align-middle" for="yes">
        Yes
      </label>

      <div class="input-group-sm ml-3">
        <input class="form-control hide" type="text" id="sample_size_textbox" placeholder="Enter Sample Size" required>
      </div>
    </div>



  </div>
</div>

