

  <div class="card bg-light mb-3">
  <h4 class="card-header">Part 1: About Survey</h4>
  <div class="card-body">
    <div class="form-group">
        <label for="is_existing_survey" class="font-weight-bold">
          Is this for an existing survey?
        </label>
      <div id="is_existing_survey">
          <div class="form-check align-middle">
            <input class="form-check-input align-middle" type="radio" name="is_existing" id="q1yes" value="yes" checked>
            <label class="form-check-label align-middle mb-2" for="yes">
              Yes
            </label>


            <select class="form-control-sm ml-3" name="select_existing_survey" id="select_existing_survey" required>
              <option value="">Select Existing Survey</option>
              <option value="1">survey 1</option>
              <option value="2">survey 2</option>
              <option value="3">survey 3</option>
            </select>

        </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="is_existing" id="q1no" value="no">
            <label class="form-check-label" for="no">
              No
            </label>
          </div>
      </div>
    </div>

      {{> part1/didSampleSizeChange}}
  </div>
</div>
