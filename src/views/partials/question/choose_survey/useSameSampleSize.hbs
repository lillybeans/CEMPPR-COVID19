<div class="form-group hide" id="use_same_sample_size">

  <label for="use_same_sample_size_options">
    Use the same sample size?
  </label>
  <div id="_options">

    <div class="form-check">
      <input class="form-check-input" type="radio" name="use_same_sample_size" id="q2yes" value="yes">
      <label class="form-check-label mb-2" for="no">
        Yes
      </label>
    </div>

    <div class="form-check-inline align-middle">
      <input class="form-check-input align-middle" type="radio" name="use_same_sample_size" id="q2no" value="no">
      <label class="form-check-label align-middle" for="yes">
        No
      </label>

      <div class="input-group-sm ml-3">
        <input class="form-control hide" type="text" id="sample_size_textbox" placeholder="Enter Sample Size">
      </div>
    </div>

  </div>
</div>
