<div class="row mx-2 my-4">
  <div class="col">
    {{#each surveyModel.formItems }}

      {{#ifEquals type "column_break"}}
  </div>
  <div class="col">
    {{else}}
      <div class="form-group {{#if @last}}last-questionInfo{{/if}}" id="questionInfo_{{@index}}">
        <label for={{ name }} class="font-weight-bold">
          {{ title }}
        </label>

        {{#ifEquals type "text"}}
          <div>
            <input class="form-control col-8" type="text" name={{name}} id={{name}} value="{{lookup ../survey name}}" placeholder="{{placeholder}}" onInput="textChanged(this)" {{#if required}} required {{/if}} readonly>
            <small id="description" class="form-text text-muted">{{description}}</small>
          </div>
        {{/ifEquals}}

        {{#ifEquals type "date"}}
          <div>
            <input class="form-control col-8" type="date" name={{name}} id={{name}} value="{{lookup ../survey name}}" {{#if required}} required {{/if}}>
            <small id="description" class="form-text text-muted">{{description}}</small>
          </div>
        {{/ifEquals}}

        {{#ifEquals type "dropdown"}}
          <div>
            <select class="form-control-sm" name={{name}} id={{name}} value="{{lookup ../survey name}}" onchange="dropdownChanged(this)" {{#if required}} required {{/if}}>
              <option value="">Select</option>

              {{#each options}}
                <option value={{this}}>{{this}}</option>
              {{/each}}

            </select>
          </div>
        {{/ifEquals}}

        {{#ifEquals type "checkbox"}}
          {{#each options}}
            <div class="form-check mb-1">
              <input class="form-check-input" type="checkbox" value={{this}} onclick="checkboxClicked(this)" id={{name}} {{#if required}} required {{/if}}>
              <label class="form-check-label" for={{this}}>
                {{this}}
              </label>
            </div>
          {{/each}}
        {{/ifEquals}}

      </div>
      {{/ifEquals}}
      {{/each}}

  </div>
</div>
