<script type="text/javascript" src="../../../js/search.js"></script>

<script id="search-results-template" type="text/x-handlebars-template">
  <div class="{{#if isSearch}}search_{{/if}}questions_list accordion mx-3" id="{{#if isSearch}}search_{{/if}}question_list">
    {{#each s_questions}}
      <div class="card">
        <div class="card-header" id="headingOne">
          <div class="panel-heading" data-toggle="collapse" data-target="#question_collapse{{@index}}" aria-expanded="false" aria-controls="question_collapse{{@index}}">
            <div class="row">
              <div class="col-9">
                {{s_question}}
              </div>
              <div class="col-2">
                <h6>{{s_poll_name}}</h6>
              </div>
              <div class="col-1">
                <ion-icon class="float-right icon-arrow-down" name="chevron-down-outline"></ion-icon>
                <ion-icon class="float-right icon-arrow-up" name="chevron-up-outline"></ion-icon>
              </div>
            </div>
          </div>
        </div>

        <div id="question_collapse{{@index}}" class="collapse" aria-labelledby="question_heading{{@index}}" data-parent="#{{#if isSearch}}search_{{/if}}question_list">
          <div class="card-body form-container">
            <form class="edit survey" id={{id}}>

              {{> database/questionDetailsTemplate question=this groups=groups themes=themes keywords=keywords }}

              <div class="mx-3 my-4 d-flex justify-content-end">
                <span class="mx-2 text-success saved-msg hide">Saved!</span>
                <button type="button" class="btn btn-primary mx-2 editButton" onClick="editQuestion(this)">Edit</button>
                <button type="button" class="btn btn-danger deleteButton" data-toggle="modal" data-target="#deleteQuestionModal{{id}}">Delete</button>
                <button type="submit" class="btn btn-primary saveButton mx-2 hide">Save</button>
                <button type="button" class="btn btn-outline-primary cancelButton hide" onClick="cancelEditQuestion(this)">Cancel</button>
                {{> database/questionDeleteModalTemplate this }}
              </div>

            </form>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</script>

<div class="questions_page mx-5 my-4">
  <h1 class="display-4 mx-3">üë©‚Äçüíº Questions</h1>
  <hr class="mx-3 bg-dark">

  <nav class="mx-3 my-2 d-flex justify-content-between">
    <ul class="pagination">
      <li class="page-item {{#ifEquals active 1}}disabled{{/ifEquals}}">
        <a class="page-link" href="./{{minus active 1}}">Previous</a>
      </li>
      {{#each pages}}
        <li class="page-item {{#ifEquals ../active this}}active{{/ifEquals}}"><a class="page-link" href="./{{this}}">{{this}}</a></li>
      {{/each}}
      <li class="page-item {{#ifEquals active pages.length}}disabled{{/ifEquals}}">
        <a class="page-link" href="./{{add active 1}}" tabindex="-1">Next</a>
      </li>
    </ul>
    <div class="num_records_label">
      {{numberOfRecords}} Records
    </div>
  </nav>

  <div class="table">
    <div class="header bg-light border rounded mx-3 my-1">
      <div class="row m-1 p-1">
        <div class="col-9">
          <div class="row">
            <div class="col-1 font-weight-bold">
              Questions
            </div>
            <div class="col-11 input-group-sm">
              <input class="form-control search question" type="text" oninput="searchQuestion(this)" />
            </div>
          </div>
        </div>
        <div class="col-3">
          <div class="form-inline input-group-sm">
            <span class="font-weight-bold mr-3">Survey</span>
            <input class="form-control search survey" type="text" oninput="searchSurvey(this)" />
          </div>
        </div>
      </div>
    </div>

    <div class="search_results">

    </div>

    <div class="questions_results">
      {{> database/questionsListTemplate question=questions groups=../groups themes=../themes keywords=../keywords }}
    </div>
</div>
</div>
